{
  "name": "debug-log-watcher",
  "version": "1.0.0",
  "description": "A macOS application to watch WordPress debug.log files and send notifications",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run rebuild && electron-builder",
    "build:mac": "npm run rebuild && electron-builder --mac",
    "build:mac-universal": "npm run rebuild && electron-builder --mac --universal",
    "build:mac-arm64": "npm run rebuild && electron-builder --mac --arm64",
    "build:mac-x64": "npm run rebuild && electron-builder --mac --x64",
    "build:mac-dist": "npm run build:mac && ./scripts/prepare-macos-distribution.sh",
    "build:optimized": "npm run optimize && npm run build:mac",
    "build:small": "npm run clean && npm install --production && npm run build:mac",
    "build:minimal": "./scripts/build-minimal.sh",
    "build:compressed": "./scripts/build-compressed.sh",
    "dev": "electron . --dev",
    "pack": "npm run rebuild && electron-builder --dir",
    "dist": "npm run rebuild && electron-builder",
    "deploy": "./scripts/deploy.sh",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild",
    "optimize": "./scripts/optimize-build.sh",
    "analyze": "./scripts/analyze-bundle-size.sh",
    "clean": "rm -rf dist temp backup test-update.zip node_modules/.cache"
  },
  "keywords": [
    "wordpress",
    "debug",
    "log",
    "watcher",
    "macos"
  ],
  "author": "WP Debugger",
  "license": "MIT",
  "devDependencies": {
    "archiver": "^7.0.1",
    "electron": "^28.3.3",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.6.0",
    "body-parser": "^1.20.2",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "extract-zip": "^2.0.1",
    "semver": "^7.5.4",
    "socket.io": "^4.7.5"
  },
  "build": {
    "appId": "com.debuglogwatcher.app",
    "productName": "WP Debugger",
    "directories": {
      "output": "dist"
    },
    "compression": "maximum",
    "removePackageScripts": true,
    "removePackageKeywords": true,
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "package.json",
      "src/**/*",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!**/test/**/*",
      "!**/tests/**/*",
      "!**/*.test.js",
      "!**/*.spec.js",
      "!**/create-test-update.js",
      "!**/test-update-server.js",
      "!**/test-*.sh",
      "!**/fix-macos-security.sh",
      "!**/DebugLogWatcher-SecurityFix.command",
      "!**/INSTALL-MACOS.md",
      "!**/DISTRIBUTION-README.md",
      "!**/test-update.zip",
      "!**/temp/**/*",
      "!**/backup/**/*",
      "!**/scripts/**/*",
      "!**/README.md",
      "!**/.gitignore"
    ],
    "asarUnpack": [
      "node_modules/chokidar/**/*",
      "node_modules/fsevents/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "minimumSystemVersion": "10.13.0"
    },
    "dmg": {
      "format": "ULFO"
    }
  }
}
