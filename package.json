{
  "name": "debug-log-watcher",
  "version": "1.0.0",
  "description": "A macOS application to watch WordPress debug.log files and send notifications",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:mac-universal": "electron-builder --mac --universal",
    "build:mac-arm64": "electron-builder --mac --arm64",
    "build:mac-x64": "electron-builder --mac --x64",
    "dev": "electron . --dev",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "deploy": "./scripts/deploy.sh",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild"
  },
  "keywords": ["wordpress", "debug", "log", "watcher", "macos"],
  "author": "Debug Log Watcher",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "chokidar": "^3.5.3"
  },
  "build": {
    "appId": "com.debuglogwatcher.app",
    "productName": "Debug Log Watcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/chokidar/**/*",
      "node_modules/fsevents/**/*",
      "node_modules/readdirp/**/*",
      "node_modules/anymatch/**/*",
      "node_modules/braces/**/*",
      "node_modules/glob-parent/**/*",
      "node_modules/is-binary-path/**/*",
      "node_modules/is-glob/**/*",
      "node_modules/normalize-path/**/*",
      "node_modules/path-is-absolute/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        },
        {
          "target": "zip",
          "arch": ["arm64", "x64"]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    }
  }
}
