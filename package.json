{
  "name": "debug-log-watcher",
  "version": "1.0.0",
  "description": "A macOS application to watch WordPress debug.log files and send notifications",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "electron . --dev"
  },
  "keywords": ["wordpress", "debug", "log", "watcher", "macos"],
  "author": "Debug Log Watcher",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "chokidar": "^3.5.3"
  },
  "build": {
    "appId": "com.debuglogwatcher.app",
    "productName": "Debug Log Watcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns"
    }
  }
}
